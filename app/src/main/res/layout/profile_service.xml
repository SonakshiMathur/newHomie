<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Navigation"
    android:background="?android:colorBackground">


    <ImageButton
        android:id="@+id/profilePicture"
        android:layout_width="88dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:background="?android:colorBackground"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/photocamera" />

    <TextView
        android:id="@+id/name_of_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/profilePicture"
        android:layout_marginStart="138dp"

        android:text="Hello , Sonakshi"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name_of_user"
        android:layout_marginTop="70dp"
        android:text="You are few steps away from completing your profile"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <android.support.v7.widget.CardView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/profilePicture"
        android:layout_marginRight="20dp"
        android:layout_marginTop="183dp"
        android:elevation="7dp">

        <ExpandableListView
            android:id="@+id/serviceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:elevation="9dp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
